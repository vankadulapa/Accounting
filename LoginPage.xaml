<Page x:Class="Accounting.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Accounting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid Background="White">
            <TextBlock HorizontalAlignment="Left" Margin="221,129,0,0" TextWrapping="Wrap" Text="Login:" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="221,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="LoginBox"/>
            <TextBlock HorizontalAlignment="Left" Margin="221,191,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" RenderTransformOrigin="0.527,0.693"/>
            <PasswordBox Name="PasswordBox" Margin="221,225,459,206" HorizontalContentAlignment="Center" >
                <PasswordBox.Effect >
                    <DropShadowEffect BlurRadius="10" Opacity="0.2"></DropShadowEffect>
                </PasswordBox.Effect>
            </PasswordBox>
            <Button Content="Войти" Click="Login_Button_Click" HorizontalAlignment="Left" Margin="234,274,0,0" VerticalAlignment="Top" Height="21" Width="74"/>



        </Grid>
    </Grid>
</Page>

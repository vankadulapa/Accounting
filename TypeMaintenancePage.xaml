<Page x:Class="Accounting.TypeMaintenancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Accounting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TypeMaintenancePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="363*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Button Content="Добавить" x:Name="AddDepartmentBtn" Click="Add_Department_Btn_Click" HorizontalAlignment="Left" Margin="24,0,0,0" VerticalAlignment="Center" Height="22" Width="134" Grid.Row="2"/>
        <Button Content="Удалить" x:Name="DeleteDepartmentBtn" Click="Delete_Department_Btn_Click" HorizontalAlignment="Left" Margin="640,0,0,0" VerticalAlignment="Center" Height="22" Width="134" Grid.Row="2"/>

    </Grid>
</Page>

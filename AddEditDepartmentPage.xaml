<Page x:Class="Accounting.AddEditDepartmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Accounting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditDepartmentPage">

    <Grid>
        <Button Content="Сохранить" x:Name="BtnSave" Click="Btn_Save_Click" HorizontalAlignment="Left" Margin="322,321,0,0" VerticalAlignment="Top" Width="120" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="155,101,0,0" TextWrapping="Wrap" Text="Отдел" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="322,99,0,0" TextWrapping="Wrap" Text="{Binding NameDepartment}" MaxLength="50" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Page>

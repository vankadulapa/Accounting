<Page x:Class="Accounting.AddEditRolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Accounting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditRolePage">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="83,83,0,0" TextWrapping="Wrap" Text="Название" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="83,123,0,0" TextWrapping="Wrap" Text="Уровень доступа" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="321,81,0,0" TextWrapping="Wrap" Text="{Binding Title}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="321,123,0,0" TextWrapping="Wrap" Text="{Binding RoleAccessLevel}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Сохранить" x:Name="BtnSave" Click="Btn_Save_Click" HorizontalAlignment="Left" Margin="321,297,0,0" VerticalAlignment="Top" Width="120" Height="24"/>


    </Grid>
</Page>
